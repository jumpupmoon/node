<!DOCTYPE html>
<html>
    <head>
        <%- include("./head.ejs") %>
    </head>

    <body>
        <%- include("./nav.ejs") %>
        <form method="post" action="<%=action %>">
            <div class="container">
                <div class="form-group">
                    <label for="inputTitle">제목</label>
                    <input name="title" type="text" class="form-control" id="inputTitle" value="<%=post.title %>">
                </div>
                <div class="form-group">
                    <label for="inputContents">내용</label>
                    <textarea name="contents" class="form-control" id="inputContents" rows="10"><%=post.contents %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">등록</button>
            </div>
        </form>
    </body>
</html>